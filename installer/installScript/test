

#!/bin/bash

# Replace /dev/sdX or /dev/nvmeXnY with your actual disk device
disk="/dev/nvme0n1"
# OR
# disk="/dev/nvmeXnY"

# Get the paths of the first, second, and third partitions
partition1=$(lsblk -lno PATH "${disk}1" 2>/dev/null || true)
partition2=$(lsblk -lno PATH "${disk}2" 2>/dev/null || true)
partition3=$(lsblk -lno PATH "${disk}3" 2>/dev/null || true)

# Print the paths
echo "First partition: $partition1"
echo "Second partition: $partition2"
echo "Third partition: $partition3"
